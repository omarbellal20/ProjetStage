{% extends 'base.html.twig' %}

{% block title %}Les responsables{% endblock %}

{% block body %}

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/fs/plugins/fontawesome-free/css/all.min.css">
  <!-- DataTables -->
  <link rel="stylesheet" href="/fs/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
  <link rel="stylesheet" href="/fs/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
  <link rel="stylesheet" href="/fs/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/fs/dist/css/adminlte.min.css">

<div class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Les responsables</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('home')}}">Home</a></li>
              <li class="breadcrumb-item active">responsables</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
        
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tableau des responsables</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for user in users %}
                  <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.Username}}</td>
                    <td>{{user.email}}</td>                    
                    <td>{{user.roles[0]}}</td>
                    <td class="project-actions text-right">
                          <a class="btn btn-primary btn-sm" href="{{ path('show_responsable',{'id':user.id}) }}">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a>
                          <a class="btn btn-info btn-sm" href="{{ path('modify_responsable',{'id':user.id}) }}">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                          <a class="btn btn-danger btn-sm" href="{{ path('sup_responsable',{'id':user.id}) }}">
                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                    </td>
                  </tr>
                  {% endfor %}
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
      <b>Version</b> 1.0.0
    </div>
    <strong>
        Copyright &copy; 
        <script>var CurrentYear = new Date().getFullYear()
         document.write(CurrentYear)</script> 
        <a href="https://www.facebook.com/bellalomarB/">OmarBellal</a>.
    </strong> All rights reserved.
  </footer>

  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
</div>
<!-- ./wrapper -->

<!-- jQuery -->
<script src="/fs/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/fs/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- DataTables  & Plugins -->
<script src="/fs/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/fs/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/fs/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="/fs/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="/fs/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="/fs/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="/fs/plugins/jszip/jszip.min.js"></script>
<script src="/fs/plugins/pdfmake/pdfmake.min.js"></script>
<script src="/fs/plugins/pdfmake/vfs_fonts.js"></script>
<script src="/fs/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="/fs/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="/fs/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
<!-- AdminLTE App -->
<script src="/fs/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="/fs/dist/js/demo.js"></script>
<!-- Page specific script -->
<script>
  $(function () {
    $("#example1").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>

{% endblock %}
